---
interface Props {
  symbol?: string | null;
}

const { symbol } = Astro.props;
---

<form action="/" method="get" class="flex gap-2">
  <div class="form-group">
    <input
      type="text"
      name="symbol"
      id="symbol"
      value={symbol ?? ''}
      placeholder="Enter stock symbol"
      pattern="^[A-Za-z]{1,5}$"
      class="px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-green-500 focus:border-green-500"
      required
    />
  </div>
  <button
    type="submit"
    class={`
      px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 
      focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 
      transition-colors relative overflow-hidden
    `}
  >
    Search
  </button>
</form>
